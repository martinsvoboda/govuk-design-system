{% from "input/macro.njk" import govukInput %}

<h2 class="govuk-heading-m">Example of a label as page heading</h2>

{{ govukInput({
  label: {
    text: "<h1> label",
    isPageHeading: true
  },
  id: "input",
  name: "input"
}) }}

